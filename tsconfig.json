{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "paths": {
      "one-penny": ["src/index.ts"],
      "one-penny/src/*": ["src/*"],
      "one-penny/es/*": ["src/*"],
      "demos": ["src/demos/index.ts"],
      "testing": ["src/tests/testing"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es", "dist", ".dumi"]
}
